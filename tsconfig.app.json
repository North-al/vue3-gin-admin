{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.d.ts",
		"src/components/**/*.tsx",
		"src/pages/**/*.tsx",
		"src/types/**/*.d.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"baseUrl": "./",
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"types": ["vite/client", "element-plus/global"],
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		}
	}
}
